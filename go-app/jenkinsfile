pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        spec:
          containers:
          - name: docker
            image: docker
            command:
            - cat
            tty: true
        '''
    }
  }
  stages {
    stage('Run docker') {
      steps {
        container('docker') {
          sh 'docker --version'
        }
      }
    }
  }
}